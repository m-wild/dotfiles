# http://ben-denham.github.io/git-advanced/
[user]
	name = Michael Wildman
	# user.email comes from $env:EMAIL
[core]
	autocrlf = true
	editor = 'C:/Program Files (x86)/Notepad++/notepad++.exe' -multiInst -notabbar -nosession -noPlugin
[push]
	default = current
[pull]
	rebase = true
[color]
	ui = always
[log]
	decorate = full
[alias]
	treelog = "log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold cyan)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all"
[filter "lfs"]
	smudge = git-lfs smudge %f
	required = true
	clean = git-lfs clean %f