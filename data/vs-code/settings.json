{
    "terminal.external.windowsExec": "pwsh",
    "terminal.integrated.shell.windows": "\\Program Files\\PowerShell\\7\\pwsh.exe",

    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "editor.fontFamily": "'Cascadia Code', Consolas, monospace",
    "editor.tabSize": 4,
    "editor.codeLens": false,
    "editor.wordWrap": "on",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",

    "breadcrumbs.enabled": false,
    "window.restoreWindows": "none",
    "workbench.colorTheme": "Nord",
    "workbench.editor.showIcons": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.settings.editor": "json",
    
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "diffEditor.ignoreTrimWhitespace": true,
    
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.views.repositories.location": "scm",
    "gitlens.views.fileHistory.location": "scm",
    "gitlens.views.lineHistory.location": "scm",
    "gitlens.views.search.location": "scm",
    "gitlens.views.compare.location": "scm",

    "gitlens.hovers.currentLine.over": "line",
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,


    "files.associations": {
        "*.conf": "ini"
    },

    "[json]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    },
    "[javascript]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    },
    
    "cSpell.language": "en-GB",
    "mssql.connections": [
        {
            "server": "(localdb)\\mssqllocaldb",
            "database": "",
            "authenticationType": "Integrated",
            "profileName": "mssqllocaldb"
        }
    ],
    "mssql.messagesDefaultOpen": false,
    "mssql.format.keywordCasing": "uppercase",
    "mssql.format.datatypeCasing": "uppercase",
    "mssql.query.displayBitAsNumber": false
}