{
	"SELECT * FROM": {
		"prefix": "ssf",
		"body": "SELECT *\nFROM $0"
	},
	"INNER JOIN": {
		"prefix": "ij",
		"body": "INNER JOIN $0"
	},
	"LEFT JOIN": {
		"prefix": "lj",
		"body": "LEFT JOIN $0"
	},
	"ON <join_condition>": {
		"prefix": "on",
		"body": "ON ${1:column1} = ${2:column2}"
	},
	"ORDER BY": {
		"prefix": "ob",
		"body": "ORDER BY $0"
	}
}